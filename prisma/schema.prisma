generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Phong {
  id    Int    @id @default(autoincrement())
  ten   String
  ten_viet_tat String
  so_thu_tu Int @default(0)
}